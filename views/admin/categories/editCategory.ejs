<section class="breadcrumb-option">
    <!-- Breadcrumb code remains unchanged -->
</section>

<div class="container d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <%= locals.title ? locals.title : 'Dashboard' %>
    </h1>
</div>

<div class="card container py-5 w mb-5 col-lg-6">
    <h3 class="mb-3 card-title text-center">Edit Category</h3>
    <form class="card-body rounded-3 bg-body-tertiary" id="edit-category-form">
        <!-- Name input -->
        <div class="err mb-3 text-danger"></div>
        <div class="row mb-3">
            <div class="form-group my-3">
                <label class="form-label" for="">Category Name</label>
                <input type="text" class="form-control " name="name"  id="edit-category" value="<%- category.name %>">
            </div>
            <input type="text" class="form-control " name="id"  id="category-id" value="<%- category._id %>" style="display: none;">
            
            <div class="form-group mb-3">
                <label class="form-label" for="category-status">Status</label>
                <select class="form-select" name="status" id="category-status" aria-label="List or Unlist the Banner">
                    <% if (category.isActive) { %>
                        <option value="true" selected>Listed</option>
                        <option value="false">Unlisted</option>
                    <% } else { %>
                        <option value="true">Listed</option>
                        <option value="false" selected>Unlisted</option>
                    <% } %>
                </select>
            </div>
            

            

        </div>
        <!-- Submit button -->
        <div class="button-grp">
            <!-- Change button color to green -->
            <button type="submit" class="btn btn-sm btn-success px-3">Submit</button>
            <button type="reset" class="btn btn-sm btn-warning px-3">Clear</button>
        </div>
    </form>
</div>
<script src="/js/admin/category/editcategory.js"></script>
<style>
    .error {
        color: rgb(255, 0, 0)
    }

    /* Add style for green button */
    .btn-success {
        background-color: green;
        color: white;
    }

    .crop-banner {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 4;
        width: 30rem;

    }
</style>

